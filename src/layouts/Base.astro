---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Ryan Bonial",
  description = "Software developer, builder of things, breaker of builds. 25+ years of making the web do stuff.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#1a0a2e" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Sora:wght@700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="min-h-screen overflow-x-hidden">
    <slot />
  </body>
</html>

<style>
  @import "../styles/global.css";
</style>
