---
import ProjectCard from "./ProjectCard.astro";
import { projects } from "../data/projects";
---

<section class="relative z-10 px-6 py-12 flex justify-center" aria-labelledby="projects-heading">
  <div class="max-w-3xl w-full">
    <h2 id="projects-heading" class="text-2xl sm:text-3xl font-semibold text-plum-200 mb-10">
      Things I've made
    </h2>
    <div class="grid gap-6 sm:grid-cols-2">
      {projects.map((project) => (
        <ProjectCard {...project} />
      ))}
    </div>
  </div>
</section>
